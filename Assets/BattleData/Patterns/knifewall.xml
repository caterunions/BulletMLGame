<?xml version="1.0" ?>
<bulletml>
  <action label="top1">
    <actionRef label="createwall"/>
  </action>

  <bullet label="knifetop">
    <visuals>altknightswordflipped</visuals>
    <speed>15</speed>
    <direction type="absolute">-90</direction>
    <offsetY type="relative">4.3</offsetY>
    <lifetime>2000</lifetime>
    <action>
      <changeSpeed>
        <speed>55</speed>
        <term>1000</term>
      </changeSpeed>
    </action>
  </bullet>

  <bullet label="knifebottom">
    <visuals>altknightsword</visuals>
    <speed>15</speed>
    <direction type="absolute">-90</direction>
    <offsetY type="relative">-4.3</offsetY>
    <lifetime>2000</lifetime>
    <action>
      <changeSpeed>
        <speed>55</speed>
        <term>1000</term>
      </changeSpeed>
    </action>
  </bullet>

  <bullet label="wallsegment">
    <action>
      <fire>
        <bulletRef label="knifetop"></bulletRef>
      </fire>
      <fire>
        <bulletRef label="knifebottom"></bulletRef>
      </fire>
      <vanish/>
    </action>
  </bullet>

  <bullet label="wallspawner">
    <offsetX>25</offsetX>
    <direction type="absolute">-90</direction>
    <sine>
      <frequency>1</frequency>
      <amplitude>2</amplitude>
    </sine>
    <action>
      <accel>
        <vertical>-1</vertical>
        <term>5000</term>
      </accel>
    </action>
    <actionRef label="fireswords"/>
    <action>
      <accel>
        <vertical>2.5</vertical>
        <term>5000</term>
      </accel>
    </action>
    <actionRef label="fireswords"/>
    <action>
      <accel>
        <vertical>-1</vertical>
        <term>5000</term>
      </accel>
    </action>
    <actionRef label="fireswords"/>
  </bullet>

  <action label="fireswords">
    <repeat>
      <times>33</times>
      <action>
        <fire>
          <bulletRef label="wallsegment"></bulletRef>
        </fire>
        <wait>150</wait>
      </action>
    </repeat>
  </action>

  <action label="createwall">
    <repeat>
      <times>1</times>
      <action>
        <fire>
          <bulletRef label="wallspawner"/>
        </fire>
      <wait>200</wait>
      </action>
    </repeat>
  </action>
</bulletml>