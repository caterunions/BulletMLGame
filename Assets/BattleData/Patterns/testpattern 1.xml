<?xml version="1.0" ?>
<bulletml>
  <action label="top1">
    <actionRef label="testac3"/>
    <actionRef label="testac2"/>
  </action>

  <action label="top2">
    <actionRef label="testac2"/>
  </action>

  <bullet label="iceTest">
    <elem>ice</elem>
    <direction type="sequence">20</direction>
    <speed>2</speed>
    <lifetime>3000</lifetime>
    <repeat>
        <times>99</times>
        <action>
        <wait>500</wait>
        <changeDirection>
            <direction type="relative">50</direction>
            <term>500</term>
        </changeDirection>
        <wait>500</wait>
        <changeDirection>
            <direction type="relative">-50</direction>
            <term>500</term>
        </changeDirection>
        </action>
    </repeat>
  </bullet>

  <bullet label="fireTest">
    <elem>fire</elem>
    <direction type="sequence">20</direction>
    <offset>5,0</offset>
    <speed>2</speed>
    <lifetime>2000</lifetime>
    <repeat>
        <times>99</times>
        <action>
        <wait>500</wait>
        <changeDirection>
            <direction type="relative">50</direction>
            <term>500</term>
        </changeDirection>
        <wait>500</wait>
        <changeDirection>
            <direction type="relative">-50</direction>
            <term>500</term>
        </changeDirection>
        </action>
    </repeat>
    <fire>
      <offset>0,3</offset>
      <bulletRef label="iceTest"/>
    </fire>
  </bullet>

  <action label="testac1">
    <repeat>
      <times>25</times>
      <action>
        <fire>
          <bulletRef label="fireTest"/>
        </fire>
      <wait>100</wait>
      </action>
    </repeat>
  </action>

  <action label="testac3">
    <repeat>
      <times>25</times>
      <action>
        <fire>
          <offset>1,1</offset>
          <bulletRef label="fireTest"/>
        </fire>
      <wait>1000</wait>
      </action>
    </repeat>
  </action>

  <action label="testac2">
    <repeat>
      <times>15</times>
      <action>
        <fire>
          <speed>10</speed>
          <bulletRef label="iceTest"/>
        </fire>
        <wait>500</wait>
        </action>
      </repeat>
  </action>
</bulletml>